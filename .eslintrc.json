{
    "plugins": [ "mocha" ],
    "parser": "babel-eslint",
    "extends": [ "airbnb" ],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": "off",
        "no-console": "off",
        "comma-dangle": "off",
        "react/jsx-filename-extension": "off",
        "array-bracket-spacing": "off",
        "linebreak-style": 0,
        "no-param-reassign": [ "error", { "props": false } ],
        "mocha/no-exclusive-tests": "error"
    }
}
