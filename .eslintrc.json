{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "mocha",
        "react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": "off",
        "no-console": "off",
        "comma-dangle": "off",
        "react/jsx-filename-extension": "off",
        "array-bracket-spacing": "off",
        "linebreak-style": 0,
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "mocha/no-exclusive-tests": "error"
    }
}