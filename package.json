{
    "name": "tinyERP",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "nodemon --exec mocha --opts ./mocha.opts \"backend/src/tests/**/*.js\"",
        "start-dev-server": "nodemon --exec babel-node -r node_modules/dotenv/config backend/src/app.js dotenv_config_path=.env.development",
        "build-server": "babel backend/src --out-dir backend/dist",
        "serve": "node -r dotenv/config backend/dist/app.js dotenv_config_path=.env.production",
        "start-dev-client": "parcel frontend/src/index.html",
        "build-client": "parcel build frontend/src/index.js",
        "dev": "concurrently \"npm run start-dev-server\" \"npm run start-dev-client\"",
        "build-final": "concurrently \"npm run build-server\" \"npm run serve\" \"npm run build-client\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.3",
